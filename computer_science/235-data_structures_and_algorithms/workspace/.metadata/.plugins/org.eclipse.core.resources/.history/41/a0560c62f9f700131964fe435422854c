#include "AVL.h"




void AVL::rebalance(Node* n)
{

			if (n == NULL || (n->right == NULL && n->left == NULL))
			{
				return;
			}
			if ((n->left == NULL && height(n->right) > 0) || (height(n->right) - height(n->left)) < 0)
			{
				if ((height(n->right->right) - height(n->right->left)) > 0)
				{
					DoubleLeft(n);
				}
				else
				{
						SingleLeft(n);
				}
			}
			else if((n->right == NULL && height(n->left) > 0) || (height(n->right) - height(n->left)) > 0)
			{
				if (height(n->left->right) - (height(n->left->left)) < 0)
				{
					DoubleRight(n);
				}
				else
				{
					SingleRight(n);
				}
			}

}




void AVL::SingleLeft(Node*& n)
{
     Node *h;
    if (n->left == NULL)
    {
    	h = NULL;
    }
    else
    {
    	 h = n->left;
    if(h->right == NULL)
    {
    	n->left = NULL;
    }
    else
    {
    	n->left = h->right;
    }
    h->right = n;
    }

     n = h;
}


void AVL::DoubleLeft(Node*& n)
{
     SingleRight(n->left);
     SingleLeft(n);
}


void AVL::SingleRight(Node*& n)
{
     Node *h;
     if (n->right == NULL)
	 {
		h = NULL;
	 }
	 else
	 {
		 h = n->right;
	 if(h->left == NULL)
	 {
		n->right = NULL;
	 }
	 else
	 {
		n->right = h->left;
	 }
	 h->left = n;
	 }

	  n = h;

//	 h = n->right;
//     n->right = h->left;
//     h->left = n;
//     n = h;
}


void AVL::DoubleRight(Node*& n)
{
     SingleLeft(n->right);
     SingleRight(n);
}


int AVL::Height(Node*n)
{
	int count = 0;
	if (n == NULL)  {
		return 0;
	}
	if (n->left == NULL && n->right == NULL)
	{
		// no child, the height is 0
		n->height = 0;
		return n->height;
	}
	if (n->left != NULL) {
		Height(n->left);
		count = n->left->height;
	}
	if (n->right != NULL){
		Height(n->right);
		if(count < n->right->height)
		{
			count = n->right->height;
		}
	}
	// include leaf in the height
	n->height = (count+1);
	return n->height;
}

int AVL::height(Node* n)//, int & h)
{


	int left, right;

	 if(n==NULL)
		 return -1;
	 left = height(n->left);
	 right = height(n->right);
	 if(left > right)
	 {
		n->height = left;
		n = NULL;

		return left+1;
	 }
	 else
	 {
		n->height = right;
		n = NULL;
		return right+1;
	 }
}



Node * AVL::add(int & data, Node* n)
{;
	if(n == NULL)
	{
		 n = new Node(data);
		 return n;
	}
	else if(data < n->data)
	{
		Node*h =  add( data, n->left);
		if(h == NULL)
		{
			return NULL;
		}
		n->left = h;
		if( height(n->left) - height(n->right) > 1)
		{
			if(data < n->left->data)
			{
				SingleLeft(n);
			}
			else
			{
				DoubleLeft(n);
			}
		}
		return n;
	 }
	 else if(data > n->data)
	 {
		Node*h = add(data, n->right);
		if (h == NULL)
		{
			return NULL;
		}
		n->right = h;
		if( (n->left == NULL && height(n->right) > 2) || ((height(n->right) - height(n->left)) > 1))
		{
			if(data > n->right->data)
			{
				SingleRight(n);
			}
			else
			{
				DoubleRight(n);
			}
		}
		return n;
	}
	else
	{
		return NULL;
	}
}






Node * AVL::deadd(int & data, Node* n)
{;
	if(n == NULL)
	{
		return NULL;
	}
	else if(data < n->data)
	{
		Node*n =  deadd( data, n->left);

		if( height(n->left) - height(n->right) > 1)
		{
			if(data < n->left->data)
			{
				SingleLeft(n);
			}
			else
			{
				DoubleLeft(n);
			}
		}
		return n;
	 }
	 else if(data > n->data)
	 {
		Node*h = deadd(data, n->right);
		if (h == NULL)
		{
			return NULL;
		}
		n->right = h;
		if( (n->left == NULL && height(n->right) > 2) || ((height(n->right) - height(n->left)) > 1))
		{
			if(data > n->right->data)
			{
				SingleRight(n);
			}
			else
			{
				DoubleRight(n);
			}
		}
		return n;
	}
	else
	{
		return n;
	}
}






bool AVL::find(int data, Node*& Remove, Node*& Previous)
{

	if( Remove->getData() == data )
	{

		return true;
	}
	if( Remove->left == NULL && Remove->right == NULL )
	{
		return false;
	}
	//check = Previous;
	if( data > Remove->getData() )
	{
		if ( Remove->right == NULL )
		{
			return false;
		}
		Previous = Remove;
		Remove = Remove->right;
		if ( find(data, Remove, Previous) )
		{
			return true;
		}
		return false;
	}
	else if( data < Remove->getData() )
	{
		 if ( Remove->left == NULL )
		 {
			 return false;
		 }
		 Previous = Remove;
		 Remove = Remove->left;
		 if ( find(data, Remove, Previous) )
		 {
			 return true;
		 }
		 return false;
	}
	return false;
}



void AVL::replace(Node*& Replace, Node*& Previous)
{
	if ( Replace->getRightChild() != NULL )
	{
		 Previous = Replace;
		 Replace = Replace->right;
		 replace(Replace, Previous);
	}
	return;
}



void AVL::rreplace(Node*& Replace, Node*& Previous)
{
	if ( Replace->getLeftChild() != NULL )
	{
		 Previous = Replace;
		 Replace = Replace->left;
		 replace(Replace, Previous);
	}
	return;
}



int AVL::HeightDifference(Node*& n)
{
	if (!(n))
		return 0;
	int rightHeight = (n->right)?n->right->height:0;
	int leftHeight = (n->left)?n->left->height:0;
	return rightHeight - leftHeight;
}



Node* AVL::rebal(Node* n)
{
	return n;
	 if (n == NULL)
	 {
		 cout << "null\n";
		 return NULL;
	 }

	 // balance subtrees first
	 rebal(n->right);
	 rebal(n->left);

	 // compute height of self node
	 n->height = height(n);

	 // if height difference is less than 2 then return
	 if ((HeightDifference(n))<1 && (HeightDifference(n))>-1)
		 return n;

	 // test which subtree is heavier
	 if (HeightDifference(n)>0) {
	  // if right subtree is heavier
		 Node* newRoot = n->right;
		 Node* newLeftRight = n->right->left;
		 Node* newLeft = n;
		 n = newRoot;
		 newRoot->left = newLeft;
		 newRoot->left->right = newLeftRight;
	 }
	 else
	 {
	  // if left subtree is heavier
		 Node* newRoot = n->left;
		 Node* newRightLeft = n->left->right;
		 Node* newRight = n;
		 n = newRoot;
		 newRoot->right = newRight;
		 newRoot->right->left = newRightLeft;
	 }
	 return n;
}






void AVL::rebal(int& data, Node* n)
{
	cout << "rebal\n";
	if( n->getData() == data )
	{
		cout << "equal\n";
		return;
	}
	if( n->left == NULL && n->right == NULL )
	{
		cout << "end\n";
		return;
	}
	//check = Previous;
	if( data > n->getData() )
	{
		cout << "right>>\n";
		if ( n->right == NULL )
		{
			return;
		}
		n = n->right;
		rebal(data, n);
		cout << "left\n";


		if (data < n->data) {
			rebal(data, n->left);
			if (height(n->left) - height(n->right)) {
				if (data < n->left->getData())
					SingleLeft(n);
				else
					DoubleLeft(n);
			}
		}
		else if (data > n->getData()) {
			rebal(data, n->right);
			if (height(n->right) - height(n->left)) {
				if (data > n->right->data)
					SingleRight(n);
				else
					DoubleRight(n);
			}
		}

		return;
	}
	else if( data < n->getData() )
	{
		cout << "left << \n";
		 if ( n->left == NULL )
		 {
			 return;
		 }
		 n = n->left;
		 rebal(data, n);
		 cout << "right\n";


		 if (data < n->data) {
		 			rebal(data, n->left);
		 			if (height(n->left) - height(n->right)) {
		 				if (data < n->left->getData())
		 					SingleLeft(n);
		 				else
		 					DoubleLeft(n);
		 			}
		 		}
		 		else if (data > n->getData()) {
		 			rebal(data, n->right);
		 			if (height(n->right) - height(n->left)) {
		 				if (data > n->right->data)
		 					SingleRight(n);
		 				else
		 					DoubleRight(n);
		 			}
		 		}



		cout << " n \n";
		 return;
	}
	cout << " no \n";
	return;
}




bool AVL::Remove(int data)
{
	cout << "remove " << data << endl;
	Node* Remove = Root;
	Node* Previous = NULL;
	// find Remove and Previous
	if(!find(data, Remove, Previous))
	{
		return false;
	}
	else
	{
		check = Previous;
	}


	bool prev = true;

	if ( Previous == NULL || Previous->data == Remove->data)
	{
		prev = false;
	}

	if( Remove->getLeftChild() == NULL && Remove->getRightChild() == NULL)
	{	// Leaf node case

		if ( prev && Previous->getLeftChild() != NULL && Previous->getLeftChild()->data == data)
		{
			//cout << "1\n";
			Previous->left = NULL;
			delete Remove;
		//	Previous = rebal(Previous);
//			return true;
		}
		else
		{	// Previous Left child is NULL

			if (prev)
			{	// there is a previous value
				Previous->right = NULL;
			}
			else
			{
				Root = NULL;
			}
//			cout << "2\n";
			delete Remove;
		//	Previous = rebal(Previous);
//			return true;
		}

		return true;
	}
	if ( Remove->left == NULL )
	{	// Can't go left
		if (prev)
		{	// there is a previous value

			if(Previous->getRightChild() != NULL && Previous->right->data == data)
			{	// if data = Previous right
				Previous->right = Remove->getRightChild();
			}
			else
			{
				Previous->left = Remove->getRightChild();
			}
		}
		else
		{
			Root = Remove->getRightChild();
		}
	//	cout << "3\n";
		Remove->right = NULL;
		delete Remove;
	//	Previous = rebal(Previous);
		return true;
	}


	// Find a replacement
	bool rprev;
	Node* RPrevious = NULL;
	Node* Replace = NULL;

	// Get Replace
	Replace = Remove->getLeftChild();
	replace(Replace, RPrevious);
//	cout << "4\n";
	if(RPrevious == NULL || RPrevious->data == Replace->data)
	{
		rprev = false;
	}
	else
	{
		rprev = true;
	}
check = Remove;

	if (rprev)
	{	// if you went left then all the way right

		if(Replace->getLeftChild() != NULL)
		{
			RPrevious->right = Replace->left;
		}
		else
		{
			RPrevious->right = NULL;
		}
		Remove->data = Replace->data;
		delete Replace;
		//Remove = rebal(Remove);
		return true;
	}
	else
	{	// you went left once
		if(Replace->getLeftChild() == NULL)
		{	// if there is no left child
			Remove->left = NULL;
			Remove->data = Replace->data;
			delete Replace;
		}
		else
		{
			Remove->data = Replace->data;
			Remove->left = Replace->left;
			delete Replace;
		}
		//Remove = rebal(Remove);
		return true;
	}
}



Node* AVL::Remove(Node* n, int data)
{
	cout << "removeees " << data << endl;
	Node* Replace = NULL;
	Node* RPrevious = NULL;
	if (data == n->data)
	{
		cout << "data\n";
		if(n->left == NULL && n->right == NULL)
		{
			cout << "leaf\n";
			if(n->data == Root->data)
			{
				cout << "root\n";
				delete n;
				Root = NULL;
				n = NULL;
			}
			else
			{
				cout << "not root\n";
				delete n;
				n = NULL;
			}
		}
		else if(n->left != NULL)
		{
			Replace = n->left;
		//	replace(Replace, RPrevious);
			if(RPrevious == NULL)
			{	// moved left once
				n->data = Replace->data;
				n->left = NULL;
				if(Replace->left != NULL)
				{
					n->left = Replace->left;
				}
			}
			else
			{	// left then right
				n->data = Replace->data;
				RPrevious->right = NULL;
				if(Replace->left != NULL)
				{
					add(Replace->left->data, Root);
				}
			}
			cout << "left\n";
			delete Replace;
			Replace = NULL;
		}
		else
		{	// go right once
			Replace = n->right;
			rreplace(Replace, RPrevious);
			if(RPrevious == NULL)
			{	// moved right once
				n->data = Replace->data;
				n->left = NULL;
				if(Replace->left != NULL)
				{
					n->right = Replace->right;
				}
			}
			else
			{	// right then left
				n->data = Replace->data;
				RPrevious->left = NULL;
				if(Replace->right != NULL)
				{
					RPrevious->left = Replace->right;
				}
			}
			cout << "right\n";
			delete Replace;
			Replace = NULL;
		}
		//rebal(n);
	//	rebalance(n);
		return n;
	}
	if(n->left != NULL)
	{
		n->left = Remove(n->left, data);
		if(n->left != NULL)
		{//b//alance
			n->left = NULL;

	//		rebalance(n);
			return n;
		}
	//	rebalance(n);
		return NULL;
	}
	if(n->right != NULL)
	{
		n->right = Remove(n->right, data);
		if(n->right != NULL)
		{//balance
			//n->right = NULL;
	//		rebalance(n);
			//rebal(n);
			return n;
		}
	//	rebalance(n);
		return NULL;
	}


	return NULL;
}



void AVL::Clear()
{
	if (Root == NULL)
	{
		return;
	}
	else
	{
		while(Root != NULL)
		{
			Remove(Root->data);
		}


		Root = NULL;
	}
}



AVL::AVL()
{
	Root = NULL;
	check = NULL;
}


AVL::~AVL()
{
	check = NULL;
	Clear();
}




Node * AVL::getRootNode()
{
	return this->Root;
}



bool AVL::add(int data)
{
	if(Root == NULL)
	{
		Root = new Node(data, 0, NULL, NULL);
		return true;
	}
	else
	{
		Node*n = add(data, Root);
		if( n == NULL )
			return false;
		Root = n;
		Height(Root);
		return true;
	}
}




bool AVL::remove(int data)
{
	if(Root == NULL)
	{
		return false;
	}
	else
	{
		//bool ret = Remove(data);

	//	if(check != NULL)
	//	{
		//	cout << "remove" << check->data << endl;
	//		rebalance(check);
		//}
		Height(Root);
	//	check = NULL;
		//return ret;
		if(Remove(Root, data) == NULL)
			return true;
		Height(Root);
		return false;
	}
}
